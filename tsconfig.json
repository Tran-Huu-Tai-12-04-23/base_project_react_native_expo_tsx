{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@hooks/*": ["src/hooks/*"],
      "@helpers/*": ["src/helpers/*"],
      "@constants/*": ["src/constants/*"],
      "@screens/*": ["src/screens/*"],
      "@layout/*": ["src/layout/*"],
      "@context/*": ["src/contexts/*"],
      "@common/*": ["src/common/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
